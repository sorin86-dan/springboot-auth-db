#=============================================================
# Build image and run command:
# docker run -v /var/run/docker.sock:/var/run/docker.sock \
#  -v $(which docker):/usr/bin/docker \
#  -v /home/sorind/jenkins:/var/jenkins_home \
#  -p 8080:8080 --name jenkins-container jenkins-img
#
# In Jenkins ->Manage Jenkins -> Global Tool Configuration make
# sure you have set JDK=jdk11, JAVA_HOME=/opt/java/openjdk and
#  Maven=Maven 3.6.0, MAVEN_HOME=
#
# After first run:
# docker network connect resources_grid jenkins-container
#=============================================================
FROM jenkins/jenkins:jdk11

USER root

#=============================================================
# Install Docker Compose
#=============================================================
RUN curl -L "https://github.com/docker/compose/releases/download/1.23.2/docker-compose-$(uname -s)-$(uname -m)" -o /usr/local/bin/docker-compose
RUN chmod +x /usr/local/bin/docker-compose

#=============================================================
# Connect current container to host Docker
#=============================================================
RUN apt-get update \
      && apt-get install -y sudo \
      && rm -rf /var/lib/apt/lists/*
RUN echo "jenkins ALL=NOPASSWD: ALL" >> /etc/sudoers

#=============================================================
# Install Maven
#=============================================================
RUN apt-get update \
      && apt-get install maven -y

USER jenkins
